{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es6",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noEmit": true,
        "allowJs": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "plugins": [{ "name": "typescript-plugin-css-modules" }]
    },
    "lib": ["es2015.promise"],
    "include": [
        "./src/**/*",
        "declaration.d.ts",
    ]
}